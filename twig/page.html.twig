<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>
{{ title }}
{{ title and settings.template.site ? ' - ' }}
{{ settings.template.site }}
{{ title or settings.template.site ? ' - ' }}
BGSU University Libraries
</title>
{% block styles %}
{% endblock %}
</head>
<body>
{% block body %}
<main id="content">
{% block content %}
{% if title %}
<h1>{{ title }}</h1>
{% endif %}
{% for message in messages %}
<div class="alert alert-{{ message.level }}">{{ message.message }}</div>
{% endfor %}
{% endblock %}
</main>
{% block scripts %}
<script src="https://lib.bgsu.edu/template/1.2.1/common.js"></script>
<script src="https://lib.bgsu.edu/template/1.2.1/template.js"></script>
<script>
{% if not iframe %}
bgsu_template.setup({
    body: true,
    main: {
        id: 'content'
    },
    unit: {
        thin: 'University',
        text: 'Libraries',
        href: 'https://www.bgsu.edu/library/',
    },
{% if settings.template.site %}
    site: {
        text: '{{ settings.template.site|raw }}',
        href: '{{ path_for('index') }}',
        heading: {{ is_current_path('index') ? 'true' : 'false' }},
    },
{% endif %}
{% if settings.template.menu %}
    menu: {{ settings.template.menu|json_encode()|raw }},
{% endif %}
    help: {
        heading: 'Contact Us',
        text: 'libadmin@bgsu.edu',
        href: 'mailto:libadmin@bgsu.edu'
    }
});
{% endif %}

bgsu_common.setup();
</script>
{% endblock %}
{% endblock %}
</body>
</html>
